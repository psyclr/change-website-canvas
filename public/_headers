# Netlify Cache Headers Configuration
# Lighthouse optimization: "Serve static assets with efficient cache policy" 

# Static assets with hashed filenames - Immutable cache (1 year)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript files - Long term cache
/*.js
  Cache-Control: public, max-age=31536000, immutable

# CSS files - Long term cache  
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images - Long term cache
/*.jpg
  Cache-Control: public, max-age=31536000
/*.jpeg  
  Cache-Control: public, max-age=31536000
/*.png
  Cache-Control: public, max-age=31536000
/*.gif
  Cache-Control: public, max-age=31536000
/*.webp
  Cache-Control: public, max-age=31536000
/*.avif
  Cache-Control: public, max-age=31536000
/*.svg
  Cache-Control: public, max-age=31536000
/*.ico
  Cache-Control: public, max-age=31536000

# Fonts - Long term cache with CORS
/*.woff
  Cache-Control: public, max-age=31536000
  Access-Control-Allow-Origin: *
/*.woff2  
  Cache-Control: public, max-age=31536000
  Access-Control-Allow-Origin: *
/*.ttf
  Cache-Control: public, max-age=31536000
  Access-Control-Allow-Origin: *

# HTML files - Short cache for SPA updates
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# JSON files - Short cache
/*.json
  Cache-Control: public, max-age=3600

# Service Worker - No cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest files - Medium cache
/*.webmanifest
  Cache-Control: public, max-age=86400